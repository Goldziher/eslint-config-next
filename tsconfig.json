{
	"include": ["*.ts", "eslint.config.js"],
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": ".",
		"module": "NodeNext",
		"moduleResolution": "nodeNext",
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"declaration": true,
		"target": "ESNext",
		"outDir": "dist"
	}
}
